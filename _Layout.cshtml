@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hamburgueria dos Brothers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<script src="~/js/site.js"></script>
<body style="font-family: Arial, Helvetica, sans-serif; background-color: #f9f9f9; margin: 0; padding: 0;">

    <header style="border-bottom: 1px solid #cccccc; background-color: #e3e3e3; padding: 15px;">
        <h1 style="margin: 0; font-size: 36px; color: #333; text-align: center;">Hamburgueria dos Brothers</h1>
    </header>

    <div style="border-bottom: 1px solid #cccccc; background-color: #f4f4f4; padding: 10px;">
        <nav style="text-align: center;">
            <a asp-controller="Home" asp-action="Index" style="margin: 0 10px; color: #333; text-decoration: none; font-weight: bold;">Início</a>
            <a asp-controller="Home" asp-action="Serviços" style="margin: 0 10px; color: #333; text-decoration: none; font-weight: bold;">Serviços</a>
            <a asp-controller="Home" asp-action="Cardápio" style="margin: 0 10px; color: #333; text-decoration: none; font-weight: bold;">Produtos</a>
            <a asp-controller="Home" asp-action="Login" style="margin: 0 10px; color: #333; text-decoration: none; font-weight: bold;">Login</a>
            <a asp-controller="Home" asp-action="Cadastro" style="margin: 0 10px; color: #333; text-decoration: none; font-weight: bold;">Cadastro</a>

            @if(Context.Session.GetInt32("IdAluno") != null)
            {
                <a asp-controller="Home" asp-action="Listarconta" style="margin: 0 10px; color: #333; text-decoration: none; font-weight: bold;">Contas</a>
                <a asp-controller="Home" asp-action="Agendamento" style="margin: 0 10px; color: #333; text-decoration: none; font-weight: bold;">Delivery</a>
                <a asp-controller="Home" asp-action="Listagem" style="margin: 0 10px; color: #333; text-decoration: none; font-weight: bold;">Pedidos</a>
                <span style="margin: 0 10px; color: #666;">@Context.Session.GetString("NomeUsuario")</span>
            }
        </nav>
    </div>

    <div class="container" style="max-width: 800px; margin: 20px auto; padding: 20px; background-color: #fff; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="border-top: 1px solid #cccccc; background-color: #e3e3e3; padding: 10px 15px; text-align: center; position: absolute; bottom: 0;">
        <div style="font-size: 14px; color: #666;">
            &copy; Copyright <a asp-area="" asp-controller="Home" asp-action="Contato" style="color: #1a73e8; text-decoration: none;">Informações de contato</a>.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
